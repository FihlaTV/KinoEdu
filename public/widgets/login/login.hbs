{{#unless loginToken }}
<div class="row-fluid form">

    <form class="form-signin" action="/api/login" method="post">
            <input name="email" type="text" class="input-block-level" placeholder="Email address"/>
            <input name="password" type="password" class="input-block-level" placeholder="Password"/>
            <button name="submit" class="login btn btn-large btn-primary">Login</button>

    </form>
    <div class="row-fluid">
        <div class="span2 offset2"><p class="lead">Login with </p></div>
        <div class="span1">
            <a href="auth/facebook" ><img src="images/facebook-login.png"></img></a>
        </div>
        <div class="span1">
            <a href="auth/google"><img src="images/google-login.png"></img></a>
        </div>
        <div class="span1">
            <a href="auth/linkedin"><img src="images/linkedin-login.png"></img></a>
        </div>
        <div class="span1">
            <a href="auth/twitter"><img src="images/twitter-login.png"></img></a>
        </div>

    </div>
    <hr></hr>
    <p class="lead">If you have not signed up, proceed to <a href="#signup" data-toggle="modal" onclick="$('#login').modal('hide')">Sign up</a> Page</a></p>


</div>
{{/unless}}
